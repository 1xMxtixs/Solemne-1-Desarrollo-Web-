---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Home/Header.astro";
---

<Layout>
  <Header />

  <section class="bg-gray-50 pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-6 space-y-8">
      <!-- T√≠tulo -->
      <header class="text-center">
        <h2 class="text-3xl font-bold text-primary">üõí Carrito de Compras</h2>
        <p class="text-gray-500 mt-2">
          Revisa los productos antes de finalizar tu pedido
        </p>
      </header>

      <!-- Contenido -->
      <div id="carrito-container" class="space-y-6">
        <!-- Aqu√≠ se insertan los productos din√°micamente -->
      </div>

      <!-- Secci√≥n de Descuento -->
      <div
        class="bg-white rounded-xl shadow p-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
      >
        <div
          class="w-full sm:w-auto flex flex-col sm:flex-row items-center gap-3"
        >
          <label for="cupon" class="text-sm font-medium text-primary"
            >¬øTienes un cup√≥n de descuento?</label
          >
          <input
            id="cupon"
            type="text"
            placeholder="Ingresa tu c√≥digo"
            class="border rounded-lg p-2 w-full sm:w-60 focus:ring-2 focus:ring-accent/50"
          />
        </div>
        <button
          id="btn-aplicar-cupon"
          class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-accent-secondary transition"
        >
          Aplicar Cup√≥n
        </button>
      </div>

      <!-- Resumen -->
      <div
        class="bg-white rounded-xl shadow-lg p-6 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4"
      >
        <div id="contenedor-totales">
          <p class="text-lg font-bold text-primary">
            Total: <span id="carrito-total">$0</span>
          </p>
        </div>

        <button
          id="go-to-checkout"
          class="px-6 py-3 bg-accent text-white rounded-lg hover:bg-accent-secondary transition shadow"
        >
          Proceder al Pago
        </button>
      </div>
    </div>
  </section>

  <script>
    // @ts-nocheck
    document.addEventListener("DOMContentLoaded", async () => {
      const carritoContainer = document.getElementById("carrito-container");
      const contenedorTotales = document.getElementById("contenedor-totales");
      const goToCheckoutBtn = document.getElementById("go-to-checkout");

      const inputCupon = document.getElementById("cupon");
      const btnAplicar = document.getElementById("btn-aplicar-cupon");

      let cart = JSON.parse(localStorage.getItem("cart") || "[]");
      let descuentoAplicado = 0;
      let codigoAplicado = "";
      let reglas = { cantidadMinimaGlobal: 1 };

      try {
        const res = await fetch(
          "http://localhost:8000/api/admin/carrito/reglas"
        );
        if (res.ok) reglas = await res.json();
      } catch (e) {
        console.error("Error reglas", e);
      }

      function renderCarrito() {
        carritoContainer.innerHTML = "";

        if (cart.length === 0) {
          carritoContainer.innerHTML = `<p class="text-gray-500 text-center py-10">Tu carrito est√° vac√≠o üçù</p>`;
          actualizarTotales();
          if (goToCheckoutBtn) {
            goToCheckoutBtn.style.opacity = "0.5";
            goToCheckoutBtn.style.cursor = "not-allowed";
          }
          return;
        }

        if (goToCheckoutBtn) {
          goToCheckoutBtn.style.opacity = "1";
          goToCheckoutBtn.style.cursor = "pointer";
        }

        cart.forEach((item, index) => {
          const totalItem = item.price * item.qty;
          carritoContainer.innerHTML += `
          <div class="bg-white rounded-lg shadow p-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 border border-gray-100">
            <div class="flex items-center gap-4">
              <div class="w-20 h-20 rounded overflow-hidden bg-gray-100 shrink-0">
                  <img src="${item.img}" class="w-full h-full object-cover" onerror="this.src='/images/logo.svg'" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-primary line-clamp-1">${item.name}</h3>
                <p class="text-sm text-gray-500">$${item.price.toLocaleString("es-CL")} c/u</p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <button onclick="updateQty(${index}, -1)" class="w-8 h-8 flex items-center justify-center bg-gray-200 rounded hover:bg-gray-300 font-bold">-</button>
              <span class="w-8 text-center font-medium">${item.qty}</span>
              <button onclick="updateQty(${index}, 1)" class="w-8 h-8 flex items-center justify-center bg-gray-200 rounded hover:bg-gray-300 font-bold">+</button>
            </div>
            <p class="font-bold text-accent min-w-[80px] text-right">$${totalItem.toLocaleString("es-CL")}</p>
            <button onclick="removeFromCarrito(${index})" class="text-red-400 hover:text-red-600 p-2 transition">
              <i class="ri-delete-bin-line text-xl"></i>
            </button>
          </div>
        `;
        });

        actualizarTotales();
      }

      function actualizarTotales() {
        const subtotal = cart.reduce(
          (acc, item) => acc + item.price * item.qty,
          0
        );
        const totalFinal = Math.max(0, subtotal - descuentoAplicado);

        let htmlResumen = "";

        if (descuentoAplicado > 0) {
          htmlResumen += `<div class="flex justify-between text-sm text-gray-500 mb-1"><span>Subtotal:</span> <span>$${subtotal.toLocaleString("es-CL")}</span></div>`;
          htmlResumen += `<div class="flex justify-between text-sm text-green-600 mb-1 font-medium"><span>Descuento (${codigoAplicado}):</span> <span>-$${descuentoAplicado.toLocaleString("es-CL")}</span></div>`;
          htmlResumen += `<div class="border-t pt-2 mt-2 flex justify-between text-xl font-bold text-primary"><span>Total:</span> <span>$${totalFinal.toLocaleString("es-CL")}</span></div>`;
        } else {
          htmlResumen = `<p class="text-lg font-bold text-primary">Total: <span>$${totalFinal.toLocaleString("es-CL")}</span></p>`;
        }

        if (contenedorTotales) {
          contenedorTotales.innerHTML = htmlResumen;
        }

        localStorage.setItem("checkoutTotal", totalFinal);

        if (codigoAplicado) {
          localStorage.setItem("cuponAplicado", codigoAplicado);
          localStorage.setItem("montoDescuento", descuentoAplicado);
        } else {
          localStorage.removeItem("cuponAplicado");
          localStorage.removeItem("montoDescuento");
        }
      }

      btnAplicar?.addEventListener("click", async () => {
        const codigo = inputCupon.value.trim().toUpperCase();
        if (!codigo) return;

        btnAplicar.disabled = true;
        btnAplicar.innerText = "Verificando...";

        try {
          const res = await fetch(
            `http://localhost:8000/api/admin/cupones/validar/${codigo}`
          );

          if (!res.ok) {
            const err = await res.json();
            throw new Error(err.detail || "Cup√≥n inv√°lido");
          }

          const data = await res.json();
          const subtotal = cart.reduce(
            (acc, item) => acc + item.price * item.qty,
            0
          );

          if (data.pedidoMinimo && subtotal < data.pedidoMinimo) {
            alert(
              `‚ö†Ô∏è Compra m√≠nima de $${data.pedidoMinimo.toLocaleString("es-CL")} requerida.`
            );
            descuentoAplicado = 0;
            codigoAplicado = "";
          } else {
            if (data.tipo === "Porcentaje") {
              descuentoAplicado = Math.round(subtotal * (data.valor / 100));
            } else {
              descuentoAplicado = data.valor;
            }
            codigoAplicado = data.codigo;
            alert(
              `‚úÖ Cup√≥n aplicado: -$${descuentoAplicado.toLocaleString("es-CL")}`
            );
          }
        } catch (error) {
          console.error(error);
          alert("‚ùå " + error.message);
          descuentoAplicado = 0;
          codigoAplicado = "";
          inputCupon.value = "";
        } finally {
          actualizarTotales();
          btnAplicar.disabled = false;
          btnAplicar.innerText = "Aplicar Cup√≥n";
        }
      });

      window.updateQty = (index, change) => {
        cart[index].qty += change;
        if (cart[index].qty <= 0) cart.splice(index, 1);
        saveCarrito();
      };

      window.removeFromCarrito = (index) => {
        if (confirm("¬øEliminar producto?")) {
          cart.splice(index, 1);
          saveCarrito();
        }
      };

      function saveCarrito() {
        localStorage.setItem("cart", JSON.stringify(cart));
        if (descuentoAplicado > 0) {
          descuentoAplicado = 0;
          codigoAplicado = "";
          inputCupon.value = "";
          alert("Carrito modificado. Por favor aplica el cup√≥n nuevamente.");
        }
        renderCarrito();
        window.dispatchEvent(new Event("cart-updated"));
      }

      renderCarrito();

      if (goToCheckoutBtn) {
        const newBtn = goToCheckoutBtn.cloneNode(true);
        goToCheckoutBtn.parentNode.replaceChild(newBtn, goToCheckoutBtn);

        newBtn.addEventListener("click", (e) => {
          e.preventDefault();
          const currentCart = JSON.parse(localStorage.getItem("cart") || "[]");

          if (currentCart.length === 0) {
            alert("Carrito vac√≠o");
            return;
          }

          const totalQty = currentCart.reduce((acc, item) => acc + item.qty, 0);
          if (totalQty < reglas.cantidadMinimaGlobal) {
            alert(
              `‚ö†Ô∏è M√≠nimo ${reglas.cantidadMinimaGlobal} productos requeridos.`
            );
            return;
          }

          window.location.href = "/Checkout";
        });
      }
    });
  </script>
</Layout>
