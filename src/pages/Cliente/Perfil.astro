---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <header class="bg-white shadow-sm border-b fixed top-0 inset-x-0 z-50">
    <div
      class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-center relative"
    >
      <button
        id="back-home"
        class="flex items-center gap-2 text-[#6E0F2C] hover:text-[#8B1E3F] transition font-medium absolute left-6"
      >
        <i class="ri-arrow-left-line text-xl"></i>
        Volver al inicio
      </button>

      <div class="flex items-center gap-3">
        <img src="/images/logo.svg" alt="La Nonna" class="h-10 w-auto" />
        <h1 class="text-xl font-bold text-[#6E0F2C] hidden sm:block">
          La Nonna
        </h1>
      </div>
    </div>
  </header>
  <section
    class="bg-gray-50 min-h-screen flex items-center justify-center py-16 px-4"
  >
    <div
      class="w-full max-w-3xl bg-white shadow-lg rounded-2xl p-8 space-y-8 border border-gray-100"
    >
      <div class="text-center">
        <div class="flex justify-center mb-3">
          <div class="bg-[#8B1E3F]/10 p-3 rounded-full">
            <i class="ri-user-3-fill text-3xl text-[#8B1E3F]"></i>
          </div>
        </div>
        <h2 class="text-3xl font-bold text-[#6E0F2C]">Perfil del Cliente</h2>
        <p class="text-gray-500 mt-1">
          Administra tus datos personales y mantén tu información actualizada.
        </p>
      </div>

      <form id="perfil-form" class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Nombre completo</label
          >
          <input
            type="text"
            id="perfil-nombre"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8B1E3F]/70 transition"
            placeholder="Cargando..."
            required
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Correo electrónico</label
          >
          <input
            type="email"
            id="perfil-email"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8B1E3F]/70 transition bg-gray-100 cursor-not-allowed"
            placeholder="Cargando..."
            disabled
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Teléfono</label
          >
          <input
            type="tel"
            id="perfil-telefono"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8B1E3F]/70 transition"
            placeholder="+56 9 1234 5678"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Dirección</label
          >
          <input
            type="text"
            id="perfil-direccion"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8B1E3F]/70 transition"
            placeholder="Av. Italia 1523, Providencia, Santiago"
          />
        </div>

        <div class="sm:col-span-2 flex justify-end">
          <button
            type="submit"
            id="guardar-btn"
            class="bg-[#8B1E3F] hover:bg-[#6E0F2C] text-white px-6 py-3 rounded-lg font-semibold shadow-md transition-all duration-200 hover:shadow-lg w-full sm:w-auto"
          >
            <i class="ri-save-3-line mr-2"></i>
            <span id="guardar-btn-texto">Guardar Cambios</span>
          </button>
        </div>
      </form>

      <div
        id="mensaje-guardado"
        class="hidden text-center bg-green-50 text-green-700 py-3 px-4 rounded-lg border border-green-200 font-medium"
      >
        <i class="ri-check-line mr-1 text-lg"></i> Datos guardados con éxito.
      </div>
      <div
        id="mensaje-error"
        class="hidden text-center bg-red-50 text-red-700 py-3 px-4 rounded-lg border border-red-200 font-medium"
      >
        <i class="ri-error-warning-line mr-1 text-lg"></i> No se pudo cargar o guardar.
      </div>
    </div>
  </section>

  <script>
    // @ts-nocheck
    document.addEventListener("DOMContentLoaded", () => {
      // === Selectores ===
      const perfilForm = document.getElementById("perfil-form");
      const guardarBtn = document.getElementById("guardar-btn");
      const guardarBtnTexto = document.getElementById("guardar-btn-texto");

      const mensajeExito = document.getElementById("mensaje-guardado");
      const mensajeError = document.getElementById("mensaje-error");

      // Inputs del formulario
      const inputNombre = document.getElementById("perfil-nombre");
      const inputEmail = document.getElementById("perfil-email");
      const inputTelefono = document.getElementById("perfil-telefono");
      const inputDireccion = document.getElementById("perfil-direccion");

      const apiUrl = "http://localhost:8000/api/perfil"; 
      const token = sessionStorage.getItem("access_token");

      if (!token) {
        window.location.href = "/Auth"; 
        return; 
      }

      async function cargarDatosPerfil() {
        try {
          const response = await fetch(apiUrl, {
            method: "GET",
            headers: {
              Authorization: `Bearer ${token}`, 
            },
          });

          if (!response.ok) {
            throw new Error("Error al cargar datos");
          }

          const data = await response.json(); 

          inputNombre.value = data.nombre || "";
          inputEmail.value = data.email || "";
          inputTelefono.value = data.telefono || "";
          inputDireccion.value = data.direccion || "";
        } catch (error) {
          console.error("Error GET:", error);
          mostrarMensaje(mensajeError, "No se pudieron cargar tus datos.");
        }
      }

      perfilForm?.addEventListener("submit", async (e) => {
        e.preventDefault(); 

        const datosActualizados = {
          nombre: inputNombre.value,
          email: inputEmail.value, 
          telefono: inputTelefono.value,
          direccion: inputDireccion.value,
        };

        guardarBtn.disabled = true;
        guardarBtnTexto.textContent = "Guardando...";

        try {
          const response = await fetch(apiUrl, {
            method: "PUT",
            headers: {
              Authorization: `Bearer ${token}`, 
              "Content-Type": "application/json",
            },
            body: JSON.stringify(datosActualizados),
          });

          if (!response.ok) {
            throw new Error("Error al guardar");
          }

          const data = await response.json();

          const usuarioStorage = JSON.parse(sessionStorage.getItem("usuario"));
          usuarioStorage.nombre = data.nombre;
          sessionStorage.setItem("usuario", JSON.stringify(usuarioStorage));

          mostrarMensaje(mensajeExito, "Datos guardados con éxito.");
        } catch (error) {
          console.error("Error PUT:", error);
          mostrarMensaje(mensajeError, "No se pudieron guardar los cambios.");
        } finally {
          guardarBtn.disabled = false;
          guardarBtnTexto.textContent = "Guardar Cambios";
        }
      });

      document.getElementById("back-home")?.addEventListener("click", () => {
        window.location.href = "/";
      });

      function mostrarMensaje(elemento, texto) {
        elemento.textContent = texto;
        elemento.classList.remove("hidden");
        elemento.classList.add("animate-fade-in");
        setTimeout(() => {
          elemento.classList.add("hidden");
          elemento.classList.remove("animate-fade-in");
        }, 3000); 
      }

      cargarDatosPerfil();
    });
  </script>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fade-in 0.4s ease-out;
    }
  </style>
</Layout>
