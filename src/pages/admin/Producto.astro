---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="section min-h-screen bg-gray-50 py-10">
    <div class="max-w-4xl mx-auto bg-white rounded-xl p-6 shadow space-y-10">

      <!-- ====== B19: Crear Producto Básico ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Crear Producto Básico</h2>
        <form id="form-producto" class="space-y-4">
          <div>
            <label class="block mb-1 text-sm">Nombre del producto</label>
            <input type="text" class="w-full border p-2 rounded" placeholder="Ej: Pizza Margarita">
          </div>
          <div>
            <label class="block mb-1 text-sm">Descripción</label>
            <textarea class="w-full border p-2 rounded" placeholder="Breve descripción del producto"></textarea>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block mb-1 text-sm">Precio</label>
              <input type="number" class="w-full border p-2 rounded" placeholder="Ej: 5000">
            </div>
            <div>
              <label class="block mb-1 text-sm">SKU</label>
              <input type="text" class="w-full border p-2 rounded" placeholder="Ej: SKU123">
            </div>
          </div>
          <div>
            <label class="block mb-1 text-sm">Categoría</label>
            <select class="w-full border p-2 rounded">
              <option>Selecciona una categoría</option>
              <option>Pizzas</option>
              <option>Bebidas</option>
              <option>Postres</option>
            </select>
          </div>
          <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">Guardar Producto</button>
        </form>
      </div>

      <!-- ====== B20: Gestionar Imágenes del Producto ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Imágenes del Producto</h2>
        <form id="form-imagenes" class="space-y-4">
          <div>
            <label class="block mb-1 text-sm">Subir imágenes</label>
            <input type="file" class="w-full border p-2 rounded" multiple>
          </div>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <!-- Miniaturas de imágenes cargadas (simuladas) -->
            <div class="border rounded p-2 text-center">
              <img src="https://via.placeholder.com/150" alt="Imagen producto" class="mx-auto mb-2">
              <button class="bg-red-500 text-white px-2 py-1 rounded text-sm">Eliminar</button>
            </div>
          </div>
          <button type="submit" class="w-full bg-green-500 text-white p-2 rounded">Guardar Imágenes</button>
        </form>
      </div>

    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const formProducto = document.getElementById('form-producto');
      const formImagenes = document.getElementById('form-imagenes');

      formProducto?.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Producto guardado (simulación)');
      });

      formImagenes?.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Imágenes guardadas (simulación)');
      });
    });
  </script>
</Layout>
