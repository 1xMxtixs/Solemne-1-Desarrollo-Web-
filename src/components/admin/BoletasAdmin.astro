---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 space-y-8">
      <!-- Header -->
      <header
        class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
      >
        <h1 class="text-2xl font-bold text-primary">Gestión de Boletas</h1>
        <div class="flex gap-3">
          <button
            class="px-4 py-2 rounded-lg bg-accent text-white hover:bg-accent-secondary transition shadow-sm duration-300"
          >
            Exportar CSV
          </button>
          <button
            class="px-4 py-2 rounded-lg bg-primary text-white/90 hover:opacity-90 transition shadow-sm duration-300"
          >
            Exportar PDF</button
          >
        </div>
      </header>

      <!-- Card Boletas -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 space-y-6"
      >
        <!-- Filtros -->
        <form class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm text-secondary mb-1">Fecha Inicio</label
            >
            <input type="date" class="input" />
          </div>
          <div>
            <label class="block text-sm text-secondary mb-1">Fecha Fin</label>
            <input type="date" class="input" />
          </div>
          <div>
            <label class="block text-sm text-secondary mb-1">Estado</label>
            <select class="input">
              <option>Todos</option>
              <option>Pagada</option>
              <option>Pendiente</option>
              <option>Anulada</option>
            </select>
          </div>
          <div class="flex items-end">
            <button
              class="w-full px-4 py-2 rounded-lg bg-accent text-white hover:bg-accent-secondary transition shadow-sm"
            >
              Aplicar Filtros
            </button>
          </div>
        </form>

        <!-- Tabla -->
        <div class="-mx-4 md:mx-0 overflow-x-auto">
          <table
            class="min-w-full text-sm rounded-lg overflow-hidden shadow border border-gray-100"
          >
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-4 py-3 text-left">N° Boleta</th>
                <th class="px-4 py-3 text-left">Fecha</th>
                <th class="px-4 py-3 text-left">Cliente</th>
                <th class="px-4 py-3 text-left">Total</th>
                <th class="px-4 py-3 text-left">Estado</th>
                <th class="px-4 py-3 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">#0001</td>
                <td class="px-4 py-3">2025-09-28</td>
                <td class="px-4 py-3">Juan Pérez</td>
                <td class="px-4 py-3">$15.990</td>
                <td class="px-4 py-3 text-green-600 font-semibold">Pagada</td>
                <td class="px-4 py-3 text-center space-x-2">
                  <button
                    class="px-3 py-1 bg-accent text-white rounded hover:bg-accent-secondary transition"
                    >Ver</button
                  >
                  <button
                    class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition"
                    >Anular</button
                  >
                </td>
              </tr>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">#0002</td>
                <td class="px-4 py-3">2025-09-27</td>
                <td class="px-4 py-3">María López</td>
                <td class="px-4 py-3">$8.500</td>
                <td class="px-4 py-3 text-yellow-600 font-semibold"
                  >Pendiente</td
                >
                <td class="px-4 py-3 text-center space-x-2">
                  <button
                    class="px-3 py-1 bg-accent text-white rounded hover:bg-accent-secondary transition"
                    >Ver</button
                  >
                  <button
                    class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition"
                    >Anular</button
                  >
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</Layout>
