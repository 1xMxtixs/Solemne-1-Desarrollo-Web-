---
import Layout from "../../layouts/Layout.astro";
import Producto from "./Producto.astro";
---

<Layout>
  <section class="bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 space-y-12">
      <!-- ================= Productos ================= -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 space-y-6"
      >
        <header
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
        >
          <h2 class="text-xl font-bold text-primary">Productos</h2>
          <button
            id="open-producto-modal"
            class="px-4 py-2 rounded-lg bg-accent text-white hover:bg-accent-secondary transition shadow-sm"
          >
            + Agregar Producto
          </button>
        </header>

        <!-- Filtros -->
        <div
          class="flex flex-col sm:flex-row gap-4 sm:items-center sm:justify-between"
        >
          <input
            type="text"
            placeholder="Buscar producto..."
            class="input w-full sm:w-1/2"
          />
          <select class="input w-full sm:w-1/4">
            <option value="">Categoría</option>
            <option>Pastas</option>
            <option>Salsas</option>
            <option>Bebidas</option>
          </select>
        </div>

        <!-- Tabla productos -->
        <div class="overflow-x-auto">
          <table
            class="min-w-full text-sm rounded-lg overflow-hidden shadow border border-gray-100"
          >
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-4 py-3 text-left">Imagen</th>
                <th class="px-4 py-3 text-left">Nombre</th>
                <th class="px-4 py-3 text-left">Categoría</th>
                <th class="px-4 py-3 text-left">Precio</th>
                <th class="px-4 py-3 text-left">Stock</th>
                <th class="px-4 py-3 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3"
                  ><img
                    src="/images/pasta.png"
                    class="w-12 h-12 object-cover rounded"
                  /></td
                >
                <td class="px-4 py-3">Spaghetti Clásico</td>
                <td class="px-4 py-3">Pastas</td>
                <td class="px-4 py-3">$4.990</td>
                <td class="px-4 py-3">120</td>
                <td class="px-4 py-3 text-center space-x-2">
                  <button
                    class="px-3 py-1 bg-accent text-white rounded hover:bg-accent-secondary transition"
                    >Editar</button
                  >
                  <button
                    class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition"
                    >Eliminar</button
                  >
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ================= Categorías ================= -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 space-y-6"
      >
        <header
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
        >
          <h2 class="text-xl font-bold text-primary">Categorías</h2>
          <button
            class="px-4 py-2 rounded-lg bg-accent text-white hover:bg-accent-secondary transition shadow-sm"
          >
            + Agregar Categoría
          </button>

          <!-- Modal -->
          <div
            id="producto-modal"
            class="fixed inset-0 flex items-center justify-center z-50 backdrop-blur-sm"
          >
            <div
              class="bg-white/90 rounded-xl shadow-lg w-full max-w-3xl p-6 relative transform scale-95 transition-transform duration-300"
            >
              <!-- Botón cerrar -->
              <button
                id="close-producto-modal"
                class="absolute top-3 right-3 text-gray-500 hover:text-gray-800"
              >
                ✕
              </button>

              <!-- Formulario de producto -->
              <Producto />
            </div>
          </div>
        </header>

        <div class="overflow-x-auto">
          <table
            class="min-w-full text-sm rounded-lg overflow-hidden shadow border border-gray-100"
          >
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-4 py-3 text-left">Nombre</th>
                <th class="px-4 py-3 text-left">Descripción</th>
                <th class="px-4 py-3 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">Pastas</td>
                <td class="px-4 py-3">Fideos artesanales e industriales</td>
                <td class="px-4 py-3 text-center space-x-2">
                  <button
                    class="px-3 py-1 bg-accent text-white rounded hover:bg-accent-secondary transition"
                    >Editar</button
                  >
                  <button
                    class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition"
                    >Eliminar</button
                  >
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ================= Variantes ================= -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 space-y-6"
      >
        <header
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
        >
          <h2 class="text-xl font-bold text-primary">Variantes</h2>
          <button
            class="px-4 py-2 rounded-lg bg-accent text-white hover:bg-accent-secondary transition shadow-sm"
          >
            + Agregar Variante
          </button>
        </header>

        <div class="overflow-x-auto">
          <table
            class="min-w-full text-sm rounded-lg overflow-hidden shadow border border-gray-100"
          >
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-4 py-3 text-left">Producto</th>
                <th class="px-4 py-3 text-left">Variante</th>
                <th class="px-4 py-3 text-left">Precio</th>
                <th class="px-4 py-3 text-left">Stock</th>
                <th class="px-4 py-3 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">Spaghetti Clásico</td>
                <td class="px-4 py-3">500g</td>
                <td class="px-4 py-3">$2.500</td>
                <td class="px-4 py-3">80</td>
                <td class="px-4 py-3 text-center space-x-2">
                  <button
                    class="px-3 py-1 bg-accent text-white rounded hover:bg-accent-secondary transition"
                    >Editar</button
                  >
                  <button
                    class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition"
                    >Eliminar</button
                  >
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ================= Vitrinas ================= -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 space-y-6"
      >
        <header
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
        >
          <h2 class="text-xl font-bold text-primary">Vitrinas Destacadas</h2>
          <button
            class="px-4 py-2 rounded-lg bg-accent text-white hover:bg-accent-secondary transition shadow-sm"
          >
            + Agregar a Vitrina
          </button>
        </header>

        <div class="overflow-x-auto">
          <table
            class="min-w-full text-sm rounded-lg overflow-hidden shadow border border-gray-100"
          >
            <thead class="bg-primary text-white">
              <tr>
                <th class="px-4 py-3 text-left">Producto</th>
                <th class="px-4 py-3 text-left">Categoría</th>
                <th class="px-4 py-3 text-left">Orden</th>
                <th class="px-4 py-3 text-left">Activo</th>
                <th class="px-4 py-3 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">Salsa Alfredo</td>
                <td class="px-4 py-3">Salsas</td>
                <td class="px-4 py-3">1</td>
                <td class="px-4 py-3">
                  <span
                    class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded-full"
                    >Activo</span
                  >
                </td>
                <td class="px-4 py-3 text-center space-x-2">
                  <button
                    class="px-3 py-1 bg-accent text-white rounded hover:bg-accent-secondary transition"
                    >Editar</button
                  >
                  <button
                    class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition"
                    >Eliminar</button
                  >
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const modal = document.getElementById("producto-modal");
      const openBtn = document.getElementById("open-producto-modal");
      const closeBtn = document.getElementById("close-producto-modal");
      const cancelBtn = document.getElementById("cancelar-modal");

      if (openBtn && modal) {
        openBtn.addEventListener("click", () => {
          modal.classList.remove("hidden");
          modal.classList.add("flex");
        });
      }

      [closeBtn, cancelBtn].forEach((btn) => {
        if (btn) {
          btn.addEventListener("click", () => {
            modal?.classList.add("hidden");
            modal?.classList.remove("flex");
          });
        }
      });
    });
  </script>
</Layout>
