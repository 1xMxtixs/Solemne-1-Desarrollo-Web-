---
import Layout from "../layouts/Layout.astro";
import Picking from "../components/despacho/Picking.astro";
import Rutas from "../components/despacho/Rutas.astro";
import PerfilDes from "../components/despacho/PerfilDes.astro";
---

<Layout title="LogÃ­stica - La Nonna">
  <section class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-40">
      <div
        class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center"
      >
        <div class="flex items-center gap-3">
          <div class="bg-indigo-600 p-2 rounded-lg text-white">
            <i class="ri-truck-fill text-xl"></i>
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-800 leading-none">
              LogÃ­stica
            </h1>
            <span class="text-xs text-gray-500 font-medium"
              >Bodega & Despacho</span
            >
          </div>
        </div>
        <button
          id="logout-btn"
          class="text-red-500 font-medium hover:underline text-sm">Salir</button
        >
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-8 space-y-6">
      <div class="flex space-x-1 bg-gray-200 p-1 rounded-xl w-fit">
        <button
          class="tab-btn px-6 py-2 rounded-lg text-sm font-bold transition bg-white text-indigo-700 shadow-sm"
          data-target="tab-bodega"
        >
          ğŸ—ï¸ Bodega (Picking)
        </button>
        <button
          class="tab-btn px-6 py-2 rounded-lg text-sm font-bold transition text-gray-600 hover:text-gray-800"
          data-target="tab-despacho"
        >
          ğŸšš Despacho (Rutas)
        </button>
      </div>

      <div id="tab-bodega" class="tab-content">
        <Picking />
      </div>

      <div id="tab-despacho" class="tab-content hidden">
        <Rutas />
      </div>
    </main>
  </section>

  <script>
    // @ts-nocheck
    document.addEventListener("DOMContentLoaded", () => {
      // LÃ³gica de PestaÃ±as
      const tabs = document.querySelectorAll(".tab-btn");
      const contents = document.querySelectorAll(".tab-content");

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          tabs.forEach((t) => {
            t.classList.remove("bg-white", "text-indigo-700", "shadow-sm");
            t.classList.add("text-gray-600");
          });
          tab.classList.add("bg-white", "text-indigo-700", "shadow-sm");
          tab.classList.remove("text-gray-600");

          contents.forEach((c) => c.classList.add("hidden"));
          document
            .getElementById(tab.dataset.target)
            .classList.remove("hidden");

          window.dispatchEvent(new Event("logistica-updated"));
        });
      });

      // Logout
      document.getElementById("logout-btn")?.addEventListener("click", () => {
        sessionStorage.clear();
        window.location.href = "/Auth";
      });
    });
  </script>
</Layout>
