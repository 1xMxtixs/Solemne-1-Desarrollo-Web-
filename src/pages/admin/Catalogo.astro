---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="section min-h-screen bg-gray-50 py-10">
    <div class="max-w-6xl mx-auto bg-white rounded-xl p-6 shadow space-y-12">

      <!-- ====== B21: Categorías y Etiquetas ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Categorías y Etiquetas</h2>
        <form class="space-y-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block mb-1 text-sm">Nueva Categoría</label>
              <input type="text" class="w-full border p-2 rounded" placeholder="Ej: Pizzas">
            </div>
            <div>
              <label class="block mb-1 text-sm">Nueva Etiqueta</label>
              <input type="text" class="w-full border p-2 rounded" placeholder="Ej: Sin gluten">
            </div>
          </div>
          <button class="w-full bg-blue-500 text-white p-2 rounded">Guardar Categoría/Etiqueta</button>
        </form>
        <div class="overflow-x-auto">
          <table class="min-w-full border">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 text-left text-sm">Categoría</th>
                <th class="px-4 py-2 text-left text-sm">Etiquetas</th>
                <th class="px-4 py-2 text-center text-sm">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="px-4 py-2">Pizzas</td>
                <td class="px-4 py-2">Sin gluten</td>
                <td class="px-4 py-2 text-center">
                  <button class="bg-red-500 text-white px-2 py-1 rounded">Eliminar</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ====== B22: Variantes / Presentaciones ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Variantes / Presentaciones</h2>
        <form class="space-y-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block mb-1 text-sm">Producto</label>
              <select class="w-full border p-2 rounded">
                <option>Selecciona producto</option>
              </select>
            </div>
            <div>
              <label class="block mb-1 text-sm">Nombre de Variante</label>
              <input type="text" class="w-full border p-2 rounded" placeholder="Ej: Grande, Mediana">
            </div>
            <div>
              <label class="block mb-1 text-sm">Precio adicional</label>
              <input type="number" class="w-full border p-2 rounded" placeholder="Ej: 1000">
            </div>
          </div>
          <button class="w-full bg-blue-500 text-white p-2 rounded">Guardar Variante</button>
        </form>
        <div class="overflow-x-auto">
          <table class="min-w-full border">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 text-left text-sm">Producto</th>
                <th class="px-4 py-2 text-left text-sm">Variante</th>
                <th class="px-4 py-2 text-left text-sm">Precio adicional</th>
                <th class="px-4 py-2 text-center text-sm">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="px-4 py-2">Pizza Margarita</td>
                <td class="px-4 py-2">Grande</td>
                <td class="px-4 py-2">$1000</td>
                <td class="px-4 py-2 text-center">
                  <button class="bg-red-500 text-white px-2 py-1 rounded">Eliminar</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ====== B23: Vitrinas / Destacar Productos ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Vitrinas y Destacar Productos</h2>
        <form class="space-y-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block mb-1 text-sm">Producto</label>
              <select class="w-full border p-2 rounded">
                <option>Selecciona producto</option>
              </select>
            </div>
            <div>
              <label class="block mb-1 text-sm">Orden en vitrina</label>
              <input type="number" class="w-full border p-2 rounded" placeholder="Ej: 1">
            </div>
          </div>
          <div>
            <label class="block mb-1 text-sm">Destacar</label>
            <input type="checkbox" class="mr-2"> Sí
          </div>
          <button class="w-full bg-blue-500 text-white p-2 rounded">Guardar en Vitrina</button>
        </form>
        <div class="overflow-x-auto">
          <table class="min-w-full border">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 text-left text-sm">Producto</th>
                <th class="px-4 py-2 text-left text-sm">Orden</th>
                <th class="px-4 py-2 text-left text-sm">Destacado</th>
                <th class="px-4 py-2 text-center text-sm">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="px-4 py-2">Pizza Margarita</td>
                <td class="px-4 py-2">1</td>
                <td class="px-4 py-2">Sí</td>
                <td class="px-4 py-2 text-center">
                  <button class="bg-red-500 text-white px-2 py-1 rounded">Eliminar</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </section>
</Layout>
