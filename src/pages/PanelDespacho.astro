---
import Layout from "../layouts/Layout.astro";
import PerfilDes from "../components/despacho/PerfilDes.astro";
---

<Layout>
  <section class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-6xl mx-auto bg-white rounded-xl shadow-lg p-8 space-y-10">
      <header class="flex items-center justify-between border-b pb-4">
        <div>
          <h2 class="text-2xl font-bold text-primary">Panel de Despacho"</h2>
          <p class="text-gray-500 text-sm">Órdenes y rutas asignadas</p>
        </div>
        <div class="flex items-center gap-4">
          <button
            id="open-perfil-modal"
            class="px-4 py-2 bg-accent text-white rounded-lg hover:bg-accent-secondary transition"
            >Editar Perfil</button
          >

          <button
            id="logout-btn"
            class="px-4 py-2 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 transition"
          >
            Cerrar Sesión
          </button>
        </div>
      </header>

      <!-- Órdenes -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-gray-50 rounded-lg p-6 border hover:shadow transition">
          <h3 class="font-semibold text-lg text-primary mb-2">Orden #00123</h3>
          <p class="text-sm text-gray-500">
            Ruta: Santiago Centro → Providencia
          </p>
          <p class="text-sm text-gray-500">Cliente: Juan Pérez</p>
          <span
            class="inline-block mt-3 px-3 py-1 text-xs bg-yellow-100 text-yellow-700 rounded-full"
            >Pendiente
          </span>
        </div>

        <div class="bg-gray-50 rounded-lg p-6 border hover:shadow transition">
          <h3 class="font-semibold text-lg text-primary mb-2">Orden #00124</h3>
          <p class="text-sm text-gray-500">Ruta: Santiago Centro → Recoleta</p>
          <p class="text-sm text-gray-500">Cliente: María González</p>
          <span
            class="inline-block mt-3 px-3 py-1 text-xs bg-blue-100 text-blue-700 rounded-full"
            >En Ruta
          </span>
        </div>

        <div class="bg-gray-50 rounded-lg p-6 border hover:shadow transition">
          <h3 class="font-semibold text-lg text-primary mb-2">Orden #00125</h3>
          <p class="text-sm text-gray-500">Ruta: Santiago Centro → Conchalí</p>
          <p class="text-sm text-gray-500">Cliente: Carlos López</p>
          <span
            class="inline-block mt-3 px-3 py-1 text-xs bg-green-100 text-green-700 rounded-full"
            >Entregado
          </span>
        </div>
      </div>

      <div
        id="perfil-modal"
        class="fixed inset-0 hidden items-center justify-center z-50 bg-white/20 backdrop-blur-sm"
      >
        <div
          class="bg-white rounded-xl shadow-lg w-full max-w-3xl p-6 relative mt-12"
        >
          <button
            id="close-perfil-modal"
            class="absolute top-3 right-3 text-gray-500 hover:text-gray-800"
            ><i class="ri-close-fill text-3xl"></i></button
          >
          <PerfilDes />
        </div>
      </div>
    </div>
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const modal = document.getElementById("perfil-modal");
      const openBtn = document.getElementById("open-perfil-modal");
      const closeBtn = document.getElementById("close-perfil-modal");

      openBtn?.addEventListener("click", () => {
        modal?.classList.remove("hidden");
        modal?.classList.add("flex");
      });

      closeBtn?.addEventListener("click", () => {
        modal?.classList.add("hidden");
        modal?.classList.remove("flex");
      });

      const logoutBtn = document.getElementById("logout-btn");
      if (logoutBtn) {
        logoutBtn.addEventListener("click", () => {
          sessionStorage.clear();
          window.location.href = "/";
        });
      }
    });
  </script>
  });
</Layout>
