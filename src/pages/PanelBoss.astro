---
import Layout from "../layouts/Layout.astro";
import SeguridadBoss from "../components/dueno/SeguridadBoss.astro";
import CatalogoBoss from "../components/dueno/CatalogoBoss.astro";
import AnaliticaBoss from "../components/dueno/AnaliticaBoss.astro";
---

<Layout>
  <!-- üîπ Header -->
  <header class="bg-white shadow-sm border-b mb-8">
    <div class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-primary">Panel del Due√±o</h1>
        <p class="text-gray-500 text-sm">
          Administraci√≥n centralizada del negocio
        </p>
      </div>
      <div class="flex items-center gap-4">
        <button
          id="logout-btn"
          class="px-4 py-2 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 transition"
        >
          Cerrar Sesi√≥n
        </button>
      </div>
    </div>
  </header>

  <!-- üîπ Contenido del panel -->
  <main class="max-w-7xl mx-auto px-6 space-y-12 pb-10">
    <div class="max-w-7xl mx-auto px-6 space--12">
      <!-- Secciones importadas -->
      <SeguridadBoss />
      <CatalogoBoss />
      <AnaliticaBoss />
    </div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const logoutBtn = document.getElementById("logout-btn");
      if (logoutBtn) {
        logoutBtn.addEventListener("click", () => {
          sessionStorage.clear();
          window.location.href = "/";
        });
      }
    });
  </script>
</Layout>
