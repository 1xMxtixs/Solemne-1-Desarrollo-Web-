---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="section min-h-screen bg-gray-50 py-10">
    <div class="max-w-6xl mx-auto bg-white rounded-xl p-6 shadow space-y-12">

      <!-- ====== B35: Reglas del Carrito ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Reglas del Carrito</h2>
        <form class="space-y-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block mb-1 text-sm">Cantidad mínima (global)</label>
              <input type="number" class="w-full border p-2 rounded" value="1">
            </div>
            <div>
              <label class="block mb-1 text-sm">Cantidad máxima por SKU</label>
              <input type="number" class="w-full border p-2 rounded" placeholder="Ej: 3">
            </div>
            <div>
              <label class="block mb-1 text-sm">Tiempo reserva stock (min)</label>
              <input type="number" class="w-full border p-2 rounded" value="15">
            </div>
          </div>
          <div class="flex items-center gap-2">
            <input type="checkbox" class="h-4 w-4">
            <label class="text-sm">Habilitar opción “Guardar Carrito”</label>
          </div>
          <button class="w-full bg-blue-500 text-white p-2 rounded">Guardar Configuración</button>
        </form>
      </div>

      <!-- ====== B36: Cupones y Restricciones ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Cupones y Restricciones</h2>
        <!-- Formulario Crear Cupón -->
        <form class="space-y-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block mb-1 text-sm">Código</label>
              <input type="text" class="w-full border p-2 rounded" placeholder="Ej: PASTA10">
            </div>
            <div>
              <label class="block mb-1 text-sm">Tipo</label>
              <select class="w-full border p-2 rounded">
                <option>Porcentaje</option>
                <option>Monto fijo</option>
              </select>
            </div>
            <div>
              <label class="block mb-1 text-sm">Valor</label>
              <input type="text" class="w-full border p-2 rounded" placeholder="10% o $200">
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block mb-1 text-sm">Pedido mínimo (CLP)</label>
              <input type="number" class="w-full border p-2 rounded" placeholder="6000">
            </div>
            <div>
              <label class="block mb-1 text-sm">Vigencia Desde</label>
              <input type="date" class="w-full border p-2 rounded">
            </div>
            <div>
              <label class="block mb-1 text-sm">Hasta</label>
              <input type="date" class="w-full border p-2 rounded">
            </div>
          </div>

          <div>
            <label class="block mb-1 text-sm">Categorías Excluidas</label>
            <input type="text" class="w-full border p-2 rounded" placeholder="Ej: Postres">
          </div>

          <div class="flex items-center gap-2">
            <input type="checkbox" class="h-4 w-4">
            <label class="text-sm">Uno por pedido</label>
          </div>

          <button class="w-full bg-green-500 text-white p-2 rounded">Guardar Cupón</button>
        </form>

        <!-- Tabla cupones existentes -->
        <div class="overflow-x-auto">
          <table class="min-w-full border">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 text-left text-sm">Código</th>
                <th class="px-4 py-2 text-left text-sm">Tipo</th>
                <th class="px-4 py-2 text-left text-sm">Valor</th>
                <th class="px-4 py-2 text-left text-sm">Estado</th>
                <th class="px-4 py-2 text-center text-sm">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="px-4 py-2">PASTA10</td>
                <td class="px-4 py-2">10%</td>
                <td class="px-4 py-2">-</td>
                <td class="px-4 py-2 text-green-600">Activo</td>
                <td class="px-4 py-2 text-center">
                  <button class="bg-red-500 text-white px-2 py-1 rounded">Eliminar</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </section>
</Layout>
