---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="section min-h-screen bg-gray-50 py-10">
    <div class="max-w-6xl mx-auto bg-white rounded-xl p-6 shadow space-y-12">

      <!-- ====== B39: Resumen Ejecutivo Ventas y Margen ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Resumen Ejecutivo</h2>
        <div class="flex gap-4 mb-6">
          <select id="periodo" class="border p-2 rounded">
            <option>Hoy</option>
            <option>Semana Actual</option>
            <option>Mes Actual</option>
            <option>Rango Personalizado</option>
          </select>
          <input type="date" id="fecha-inicio" class="border p-2 rounded hidden">
          <input type="date" id="fecha-fin" class="border p-2 rounded hidden">
        </div>

        <!-- KPIs principales -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Ventas</h3>
            <p class="text-2xl" id="ventas-totales">$0</p>
          </div>
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Margen Estimado</h3>
            <p class="text-2xl" id="margen-estimado">$0</p>
          </div>
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Pedidos</h3>
            <p class="text-2xl" id="num-pedidos">0</p>
          </div>
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Ticket Promedio</h3>
            <p class="text-2xl" id="ticket-promedio">$0</p>
          </div>
        </div>

        <!-- Top platos -->
        <h3 class="text-xl font-semibold mt-6 mb-2">Top 5 Platos y Categorías</h3>
        <ul id="top-productos" class="list-disc pl-6 text-sm">
          <li>Rigatoni</li>
          <li>Lasagna</li>
          <li>Gnocchi</li>
        </ul>
      </div>

      <!-- ====== B40: Desempeño de Logística ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Desempeño de Logística</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Tiempo Preparación</h3>
            <p class="text-2xl" id="tiempo-prep">0 min</p>
          </div>
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Tiempo en Ruta</h3>
            <p class="text-2xl" id="tiempo-ruta">0 min</p>
          </div>
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">OTD %</h3>
            <p class="text-2xl" id="otd">0%</p>
          </div>
          <div class="bg-gray-100 rounded p-4 text-center">
            <h3 class="text-lg font-bold">Cancelaciones</h3>
            <p class="text-2xl" id="cancelaciones">0</p>
          </div>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full border text-sm">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 text-left">Fecha</th>
                <th class="px-4 py-2 text-left">Pedido</th>
                <th class="px-4 py-2 text-left">Tiempo Prep</th>
                <th class="px-4 py-2 text-left">Tiempo Ruta</th>
                <th class="px-4 py-2 text-left">OTD%</th>
                <th class="px-4 py-2 text-left">Cancelaciones</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="px-4 py-2">2025-09-26</td>
                <td class="px-4 py-2">#00123</td>
                <td class="px-4 py-2">12 min</td>
                <td class="px-4 py-2">40 min</td>
                <td class="px-4 py-2 text-green-600">89%</td>
                <td class="px-4 py-2">0</td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>

    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Simulación de cambio periodo
      const periodo = document.getElementById('periodo');
      periodo?.addEventListener('change', () => {
        alert('Simulación: cambiar KPIs al periodo seleccionado');
      });
    });
  </script>
</Layout>
