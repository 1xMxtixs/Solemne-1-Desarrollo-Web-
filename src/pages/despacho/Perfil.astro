---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="section min-h-screen bg-gray-50 py-10">
    <div class="max-w-2xl mx-auto bg-white rounded-xl p-6 shadow space-y-8">
      <h2 class="text-2xl font-semibold mb-4">Perfil Encargado de Despacho</h2>
      <form class="space-y-4">
        <div>
          <label class="block mb-1 text-sm">Nombre</label>
          <input type="text" class="w-full border p-2 rounded" placeholder="Tu nombre">
        </div>
        <div>
          <label class="block mb-1 text-sm">Email</label>
          <input type="email" class="w-full border p-2 rounded" placeholder="correo@ejemplo.com">
        </div>
        <div>
          <label class="block mb-1 text-sm">Tel√©fono</label>
          <input type="tel" class="w-full border p-2 rounded" placeholder="+56 9 1234 5678">
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">Guardar Cambios</button>
      </form>
    </div>
  </section>
</Layout>
