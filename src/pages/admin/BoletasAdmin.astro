---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="section min-h-screen bg-gray-50 py-10">
    <div class="max-w-6xl mx-auto bg-white rounded-xl p-6 shadow space-y-12">

      <!-- ====== Filtros de búsqueda ====== -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Boletas Emitidas</h2>
        <form id="form-filtros" class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
          <div>
            <label class="block mb-1 text-sm">Fecha Inicio</label>
            <input type="date" class="w-full border p-2 rounded">
          </div>
          <div>
            <label class="block mb-1 text-sm">Fecha Fin</label>
            <input type="date" class="w-full border p-2 rounded">
          </div>
          <div>
            <label class="block mb-1 text-sm">Cliente</label>
            <input type="email" class="w-full border p-2 rounded" placeholder="correo@cliente.com">
          </div>
          <div>
            <label class="block mb-1 text-sm">Estado Pago</label>
            <select class="w-full border p-2 rounded">
              <option>Todos</option>
              <option>Pagadas</option>
              <option>Pendientes</option>
              <option>Rechazadas</option>
            </select>
          </div>
          <button class="col-span-full bg-blue-500 text-white p-2 rounded mt-2">Aplicar Filtros</button>
        </form>
      </div>

      <!-- ====== Tabla Boletas ====== -->
      <div class="overflow-x-auto">
        <table class="min-w-full border text-sm">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left">Fecha</th>
              <th class="px-4 py-2 text-left">Boleta</th>
              <th class="px-4 py-2 text-left">Orden</th>
              <th class="px-4 py-2 text-left">Cliente</th>
              <th class="px-4 py-2 text-left">Monto</th>
              <th class="px-4 py-2 text-left">Estado</th>
              <th class="px-4 py-2 text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-t">
              <td class="px-4 py-2">2025-09-10</td>
              <td class="px-4 py-2">#B-LN-00023</td>
              <td class="px-4 py-2">#LN-2025-09-0101</td>
              <td class="px-4 py-2">ana@nonna.cl</td>
              <td class="px-4 py-2">$18.490</td>
              <td class="px-4 py-2 text-green-600">Pagada</td>
              <td class="px-4 py-2 text-center">
                <a href="/Boleta?boleta=B-LN-00023" class="bg-green-500 text-white px-2 py-1 rounded">Ver</a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- ====== Exportación Masiva ====== -->
      <div class="text-right mt-4">
        <button class="bg-gray-700 text-white px-4 py-2 rounded">Exportar ZIP</button>
      </div>

    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelector('button.bg-gray-700')?.addEventListener('click', () => {
        alert('Simulación: Exportar ZIP con boletas filtradas');
      });
    });
  </script>
</Layout>
