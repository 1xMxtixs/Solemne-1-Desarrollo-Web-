<header
  class="fixed inset-x-0 top-0 z-50 bg-white/90 backdrop-blur-lg shadow-sm border-b"
>
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex h-16 items-center justify-between gap-6">
      <a
        href="/"
        class="hidden md:flex items-center gap-3 shrink-0 relative z-30"
      >
        <img src="/images/logo.svg" alt="La Nonna" class="h-9 w-auto" />
        <span class="sr-only">Inicio</span>
      </a>

      <a
        href="/"
        class="md:hidden flex items-center gap-3 shrink-0 relative z-30"
      >
        <img src="/images/logo.svg" alt="La Nonna" class="h-9 w-auto" />
        <span class="sr-only">Inicio</span>
      </a>

      <nav aria-label="Principal" class="hidden md:block">
        <ul class="flex items-center gap-8 text-sm font-medium">
          <li>
            <a
              href="/"
              class="text-secondary hover:text-primary transition-colors"
              >Inicio</a
            >
          </li>
          <li>
            <a
              href="/Menu"
              class="text-secondary hover:text-primary transition-colors"
              >Men칰</a
            >
          </li>
          <li>
            <a
              href="#contacto"
              class="js-scroll text-secondary hover:text-primary transition-colors"
              >Contacto</a
            >
          </li>
          <li>
            <a
              href="#sobre-nosotros"
              class="js-scroll text-secondary hover:text-primary transition-colors"
              >Sobre Nosotros</a
            >
          </li>
        </ul>
      </nav>

      <div class="flex items-center gap-5 relative z-30">
        <button id="cart-btn" class="relative">
          <i class="ri-shopping-cart-2-line text-2xl text-primary"></i>
          <span
            id="cart-count"
            class="absolute -top-2 -right-2 bg-accent text-white text-xs w-5 h-5 flex items-center justify-center rounded-full shadow"
          >
            0
          </span>
        </button>

        <button
          id="cuenta-btn"
          class="hidden md:inline-flex rounded-full border border-accent px-5 py-2 text-sm font-medium text-secondary hover:bg-accent/10 transition"
        >
          Cuenta
        </button>

        <button
          id="logout-btn"
          class="hidden bg-red-500 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-600 transition"
        >
          Cerrar sesi칩n
        </button>

        <button
          id="menu-open-btn"
          type="button"
          class="bg-primary w-9 h-9 flex md:hidden justify-center items-center rounded-md cursor-pointer"
        >
          <i class="ri-menu-line text-2xl text-white"></i>
        </button>
      </div>
    </div>
  </div>

  <nav
    class="mnav bg-white fixed w-[300px] top-0 h-screen -left-[300px] shadow-2xl md:hidden transition-all ease-out duration-300 z-40"
  >
    <div class="px-10 flex flex-col gap-y-10 h-full pt-10">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img src="/images/logo.svg" alt="La Nonna Logo" class="h-10" />
        </a>
        <button
          id="menu-close-btn"
          type="button"
          class="bg-primary w-9 h-9 flex justify-center items-center rounded-md cursor-pointer"
        >
          <i class="ri-arrow-left-s-line text-2xl text-white"></i>
        </button>
      </div>

      <ul class="flex flex-col gap-y-6 text-lg font-medium">
        <li>
          <a href="/" class="text-secondary hover:text-accent transition"
            >Inicio</a
          >
        </li>
        <li>
          <a href="/Menu" class="text-secondary hover:text-accent transition"
            >Men칰</a
          >
        </li>
        <li>
          <a
            href="#contacto"
            class="js-scroll text-secondary hover:text-accent transition"
            >Contacto</a
          >
        </li>
        <li>
          <a
            href="#sobre-nosotros"
            class="js-scroll text-secondary hover:text-accent transition"
            >Sobre Nosotros</a
          >
        </li>
      </ul>

      <div class="mt-auto pb-8">
        <a href="/Auth" class="btn btn-accent w-full" id="mobile-cuenta-btn"
          >Cuenta</a
        >
      </div>
    </div>
  </nav>
</header>

<div
  id="cart-sidebar"
  class="fixed top-0 right-0 w-80 h-full bg-white shadow-lg transform translate-x-full transition-transform duration-300 z-50 flex flex-col"
>
  <div class="flex items-center justify-between p-4 border-b">
    <h2 class="text-lg font-bold text-primary">游 Tu Carrito</h2>
    <button id="close-cart" class="text-gray-500 hover:text-gray-800 text-xl"
      ><i class="ri-close-fill"></i></button
    >
  </div>
  <div id="cart-items" class="flex-1 overflow-y-auto p-4 space-y-4">
    <p class="text-gray-500 text-sm">Tu carrito est치 vac칤o</p>
  </div>
  <div class="p-4 border-t space-y-3">
    <p class="flex justify-between text-sm">
      <span>Total:</span><span id="cart-total" class="font-bold text-primary"
        >$0</span
      >
    </p>
    <button
      id="go-to-cart"
      class="w-full py-2 bg-accent text-white rounded-lg hover:bg-accent-secondary transition"
      >Ir al Carrito</button
    >
  </div>
</div>

<script>
  // @ts-nocheck

  // === 1. VARIABLES GLOBALES Y NAVEGACI칍N M칍VIL ===
  const mobileNav = document.querySelector(".mnav");
  const openBtn = document.getElementById("menu-open-btn");
  const closeBtn = document.getElementById("menu-close-btn");
  const mainLogo = document.querySelector(
    ".md\\:hidden.flex.items-center.gap-3.shrink-0.relative.z-30"
  );

  const OPEN_CLASS = "left-0";
  const CLOSED_CLASS = "-left-[300px]";

  const openMobileNav = () => {
    if (!mobileNav) return;
    mobileNav.classList.remove(CLOSED_CLASS);
    mobileNav.classList.add(OPEN_CLASS);
    mainLogo?.classList.add("hidden");
    openBtn?.classList.add("hidden");
  };

  const closeMobileNav = () => {
    if (!mobileNav) return;
    mobileNav.classList.remove(OPEN_CLASS);
    mobileNav.classList.add(CLOSED_CLASS);
    mainLogo?.classList.remove("hidden");
    openBtn?.classList.remove("hidden");
  };

  openBtn?.addEventListener("click", openMobileNav);
  closeBtn?.addEventListener("click", closeMobileNav);

  mobileNav
    ?.querySelectorAll("a")
    .forEach((link) => link.addEventListener("click", closeMobileNav));

  // === 2. L칍GICA PRINCIPAL (AL CARGAR LA P츼GINA) ===
  document.addEventListener("DOMContentLoaded", () => {
    // --- A. MANEJO DE SESI칍N Y USUARIO ---
    const cuentaBtn = document.getElementById("cuenta-btn");
    const logoutBtn = document.getElementById("logout-btn");
    const mobileCuentaBtn = document.getElementById("mobile-cuenta-btn");
    const loginUrl = "/Auth";

    let usuario = null;
    const usuarioString = sessionStorage.getItem("usuario");

    if (usuarioString) {
      try {
        usuario = JSON.parse(usuarioString);
      } catch (e) {
        console.error("Error sesi칩n:", e);
        sessionStorage.removeItem("usuario");
      }
    }

    // Configurar botones seg칰n estado de sesi칩n
    if (usuario && usuario.rol && usuario.nombre) {
      const primerNombre = usuario.nombre.split(" ")[0];

      if (cuentaBtn) cuentaBtn.textContent = `Hola, ${primerNombre}`;
      if (mobileCuentaBtn)
        mobileCuentaBtn.textContent = `Mi Perfil (${primerNombre})`;
      if (logoutBtn) logoutBtn.classList.remove("hidden");

      // Redirecci칩n inteligente seg칰n rol
      const getPanelUrl = (rol) => {
        if (rol === "administrador") return "/PanelAdmin";
        if (rol === "cliente") return "/Cliente/Perfil";
        if (rol === "logistica") return "/PanelDespacho";
        if (rol === "due침o") return "/PanelBoss";
        return "/";
      };
      const panelUrl = getPanelUrl(usuario.rol);

      if (cuentaBtn)
        cuentaBtn.addEventListener(
          "click",
          () => (window.location.href = panelUrl)
        );
      if (mobileCuentaBtn) mobileCuentaBtn.setAttribute("href", panelUrl);
    } else {
      // Usuario NO logueado
      if (cuentaBtn) {
        cuentaBtn.textContent = "Cuenta";
        cuentaBtn.addEventListener(
          "click",
          () => (window.location.href = loginUrl)
        );
      }
      if (mobileCuentaBtn) {
        mobileCuentaBtn.textContent = "Cuenta";
        mobileCuentaBtn.setAttribute("href", loginUrl);
      }
      if (logoutBtn) logoutBtn.classList.add("hidden");
    }

    // Bot칩n Cerrar Sesi칩n
    logoutBtn?.addEventListener("click", () => {
      sessionStorage.clear(); // Borra todo (usuario, token, carrito si quisieras)
      window.location.href = loginUrl;
    });

    // --- B. L칍GICA DEL CARRITO (SIDEBAR) ---
    const cartBtn = document.getElementById("cart-btn");
    const cartSidebar = document.getElementById("cart-sidebar");
    const closeCart = document.getElementById("close-cart");
    const cartItems = document.getElementById("cart-items");
    const cartCount = document.getElementById("cart-count");
    const cartTotal = document.getElementById("cart-total");
    const goToCartBtn = document.getElementById("go-to-cart");

    // Abrir/Cerrar Sidebar
    cartBtn?.addEventListener("click", () =>
      cartSidebar?.classList.remove("translate-x-full")
    );
    closeCart?.addEventListener("click", () =>
      cartSidebar?.classList.add("translate-x-full")
    );
    goToCartBtn?.addEventListener(
      "click",
      () => (window.location.href = "/Carrito")
    );

    // Funci칩n de Renderizado
    const renderCart = () => {
      const cart = JSON.parse(localStorage.getItem("cart") || "[]");

      if (!cartItems || !cartCount || !cartTotal) return;

      // 1. Contador Burbuja
      const totalQty = cart.reduce((acc, item) => acc + item.qty, 0);
      cartCount.textContent = totalQty.toString();

      if (totalQty > 0) {
        cartCount.classList.remove("hidden");
        cartCount.classList.add("flex");
      } else {
        cartCount.classList.add("hidden");
      }

      // 2. Lista de Items
      cartItems.innerHTML = "";
      if (cart.length === 0) {
        cartItems.innerHTML = `<p class="text-gray-500 text-sm text-center mt-10">Tu carrito est치 vac칤o 游꼫</p>`;
      } else {
        cart.forEach((item, index) => {
          cartItems.innerHTML += `
            <div class="flex items-center justify-between bg-gray-50 p-3 rounded-lg mb-2 shadow-sm">
              <div class="flex items-center gap-3">
                 <div class="w-10 h-10 rounded bg-white overflow-hidden shrink-0 border border-gray-200">
                    <img src="${item.img}" class="w-full h-full object-cover" onerror="this.src='/images/logo.svg'">
                 </div>
                 <div>
                    <p class="font-bold text-xs text-gray-800 line-clamp-1">${item.name}</p>
                    <p class="text-xs text-gray-500">${item.qty} x $${item.price.toLocaleString("es-CL")}</p>
                 </div>
              </div>
              <button onclick="window.removeItemFromHeader(${index})" class="text-red-400 hover:text-red-600 p-1">
                <i class="ri-delete-bin-line"></i>
              </button>
            </div>`;
        });
      }

      // 3. Total
      const totalPrice = cart.reduce(
        (acc, item) => acc + item.price * item.qty,
        0
      );
      cartTotal.textContent = "$" + totalPrice.toLocaleString("es-CL");
    };

    // Escuchar el evento personalizado 'cart-updated'
    // Esto permite que Menu.astro (u otros) avisen al header que actualice
    window.addEventListener("cart-updated", renderCart);

    // Render inicial
    renderCart();
  });

  // === 3. FUNCIONES GLOBALES (Para usar en onclick) ===

  // Eliminar item desde el sidebar
  window.removeItemFromHeader = (index) => {
    const cart = JSON.parse(localStorage.getItem("cart") || "[]");
    cart.splice(index, 1); // Eliminar
    localStorage.setItem("cart", JSON.stringify(cart));

    // Avisar a todo el mundo que el carrito cambi칩
    window.dispatchEvent(new Event("cart-updated"));
  };

  // === 4. SCROLL SUAVE (Links ancla) ===
  function scrollToTarget(hash) {
    const el = document.querySelector(hash);
    if (!el) return;
    const header = document.querySelector("header.fixed");
    const offset =
      header && "offsetHeight" in header ? header.offsetHeight + 8 : 0;
    const y = el.getBoundingClientRect().top + window.pageYOffset - offset;
    window.scrollTo({ top: y, behavior: "smooth" });
  }

  document.querySelectorAll("a.js-scroll").forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const href = link.getAttribute("href");
      if (!href || !href.startsWith("#")) return;
      if (location.pathname === "/" || location.pathname === "/index") {
        closeMobileNav();
        scrollToTarget(href);
        history.replaceState(null, "", href);
      } else {
        window.location.href = `/${href}`;
      }
    });
  });

  if (location.pathname === "/" || location.pathname === "/index") {
    if (location.hash) {
      setTimeout(() => scrollToTarget(location.hash), 50);
    }
  }
</script>
