---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <section class="min-h-screen bg-gray-50 oy-12">
    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-8 space-y-8">
      <!-- Header perfil -->
       <div class="flex items-center gap-4 border-b pb-4">
        <img src="" alt="Avatar" class="w-16 h-16 rounded-full object-cover">
        <div>
          <h2 class="text-2xl font-bold text-primary">Perfil Encargado de Despacho</h2>
          <p class="text-sm text-gray-500">Gestiona tu información de contacto</p>
        </div>
       </div>

       <!-- Formulario -->
        <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-primary mb-1">Nombre</label>
            <input type="text" class="input" placeholder="Tu nombre" />
          </div>
          <div>
            <label class="block text-sm font-medium text-primary mb-1">Email</label>
            <input type="email" class="input" placeholder="correo@ejemplo.com" />
          </div>
          <div>
            <label class="block text-sm font-medium text-primary mb-1">Teléfono</label>
            <input type="tel" class="input" placeholder="+56 9 1234 5678" />
          </div>
          <div class="md:col-spa2 flex justify-end gap-4">
            <button type="reset" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition shadow">Guardar Cambios</button>
          </div>
        </form>
    </div>
  </section>
</Layout>